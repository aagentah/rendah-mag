{
  "name": "rm-setup",
  "version": "2.5.1",
  "description": "rm-setup",
  "main": "index.js",
  "engines": {
    "node": ">=6.0",
    "npm": ">=3.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "react",
    "redux",
    "react router",
    "express",
    "webpack 3",
    "es6",
    "flow",
    "hot reloading",
    "babel",
    "performance optimizing"
  ],
  "author": "Dan Jones",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "scripts": {
    "start": "better-npm-run start",
    "heroku-postbuild": "npm run build",
    "start:heroku": "npm run start:prod",
    "start:production": "npm run build && npm run start:prod",
    "start:prod": "better-npm-run start:prod",
    "start:prodlocal": "npm run build && better-npm-run start:prodlocal",
    "build": "npm run clean:build && better-npm-run build",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "better-npm-run lint:js",
    "lint:style": "better-npm-run lint:style",
    "flow": "better-npm-run flow",
    "clean:all": "npm run clean:build && npm run clean:test",
    "clean:build": "better-npm-run clean:build",
    "clean:test": "better-npm-run clean:test",
    "coveralls": "better-npm-run coveralls && npm run clean:test"
  },
  "betterScripts": {
    "start": {
      "command": "nodemon ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start:prod": {
      "command": "PORT=${PORT:-8080} node ./index.js",
      "env": {
        "NODE_HOST": "0.0.0.0",
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "BROWSER": "none"
      }
    },
    "start:prodlocal": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "lint:js": {
      "command": "eslint ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint \"./src/**/*.scss\" --syntax scss"
    },
    "flow": {
      "command": "flow; test $? -eq 0 -o $? -eq 2"
    },
    "clean:build": {
      "command": "rimraf ./public/assets"
    },
    "clean:test": {
      "command": "rimraf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-0"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "linebreak-style": 0,
      "global-require": 0,
      "no-underscore-dangle": 0,
      "no-console": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "function-paren-newline": 0
    },
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DISABLE_SSR__": true,
      "__DEV__": true,
      "webpackIsomorphicTools": true
    }
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "@sanity/client": "^0.133.2",
    "axios": "^0.17.0",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.3.0",
    "classnames": "^2.2.5",
    "cloudinary-react": "^1.0.4",
    "compression": "1.7.1",
    "cors": "^2.8.4",
    "express": "4.16.2",
    "helmet": "3.9.0",
    "history": "^4.7.2",
    "hpp": "^0.2.2",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.31",
    "morgan": "1.9.0",
    "opn": "^5.1.0",
    "prop-types": "^15.6.0",
    "react": "16.2.0",
    "react-device-detect": "^1.3.4",
    "react-dom": "16.2.0",
    "react-facebook": "^5.0.3",
    "react-frontload": "1.0.3",
    "react-ga": "^2.5.0",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "3.1.1",
    "react-iframe": "^1.2.0",
    "react-instafeed": "^0.4.0",
    "react-lazyload": "^2.3.0",
    "react-mailchimp-subscribe": "^2.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "5.0.0-alpha.6",
    "react-slick": "^0.23.1",
    "react-soundcloud-player": "^1.0.1",
    "react-spotify-player": "^1.0.4",
    "react-youtube": "^7.5.0",
    "redbox-react": "^1.5.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0",
    "serve-favicon": "2.4.5",
    "webpack-isomorphic-tools": "^3.0.5",
    "xmlbuilder": "^10.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-remove-console": "^6.8.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "better-npm-run": "^0.1.0",
    "coveralls": "3.0.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.7",
    "enzyme": "3.1.0",
